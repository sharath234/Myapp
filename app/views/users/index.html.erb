<p id="notice"><%= notice %></p>

<h4 align="right">  
<%= form_tag(users_path, method: :get) do %>
 <%= text_field_tag :user_name, params[:user_name] %>
  <%= submit_tag 'Search'%>
<% end %>

<h1>All Users</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
     <th>Email </th>
      <th>User name</th>
      <th>Role</th>
      <th>Designation</th>
      <th>Address</th>
      <th>Street</th>
      <th>City</th>
      <th>Pincode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
      <td><%= user.email %></td>
        <td><%= link_to user.user_name, user_path(user) %></td>
        <td><%= user.role %></td>
        <td><%= user.designation %></td>
        <td><%= user.address %></td>
        <td><%= user.street %></td>
        <td><%= user.city %></td>
        <td><%= user.pincode %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New User', new_user_path %>
 
<P> <%= will_paginate @users%></p>

